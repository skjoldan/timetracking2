{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ],
  "projectSettings": {
    "framework": "vue",  // Specify the framework
    "buildCommand": "npm run build",  // Specify the build command
    "outputDirectory": "client/dist"  // Specify the output directory
  }
}
